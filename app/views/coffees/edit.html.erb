<%= render "shared/header"%>

<%= form_with model: @coffee , url: coffee_path ,class: 'registration-main', local: true do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        コーヒー豆の情報修正
      </h1>
    </div>

    <%# エラーメッセージの表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# //エラーメッセージの表示 %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">銘柄</label>
        <span class="indispensable">※</span>
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) キリマンジャロ", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">原産国</label>
        <span class="indispensable">※</span>
      </div>
      <%= f.collection_select(:country_id, Country.all, :id, :name, {}, {class:"input-default", id:"country"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">購入日</label>
        <span class="indispensable">※</span>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :date_of_purchase,
                      class:'sxlect-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 2000,
                      end_year: (Time.now.year),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">購入店</label>
        <span class="indispensable">※</span>
      </div>
      <%= f.text_area :shop, class:"input-default", id:"shop", placeholder:"例) カルディ", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">詳細</label>
        <span class="optional">任意</span>
      </div>
      <%= f.text_area :detail, class:"input-long", id:"detail", placeholder:"例) カルディ" , rows:"7",maxlength:"1000" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "コーヒー豆の情報修正" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>