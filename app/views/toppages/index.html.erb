<%= render "shared/header" %>

<%# 画面上部の「コーヒー体験をレビューしよう」帯部分 %>
<div class='title-contents'>
  <h2 class='service-title'>
    コーヒー体験をレビューしよう
  </h2>
  <p class='service-explain'>
    CafeTimesは自身のコーヒー体験と向き合える
  </p>
  <p class='service-explain'>
    記録アプリです
  </p>
</div>
<%# /画面上部の「コーヒー体験をレビューしよう」帯部分  %>

<%# CafeTimesの3つの活用法 %>
<div class='how-to-use'>
  <h2 class='title'>
    CafeTimesの活用法<br>３ステップ
  </h2>
  <ul class='use-lists'>
    <li class='list'>
      <%= image_tag "coffee-how-to1.jpg", class:"list-pict" %>
      <span class='use-list-number'>1</span>
      <h3 class='use-list-text'>
        コーヒーの
        <span class='use-list-blue-text'>登録</span>
      </h3>
      <p class='use-list-description'>
        購入したコーヒー豆を登録！
      </p>
    </li>
    <li class='list'>
      <%= image_tag "coffee-how-to2.jpg", class:"list-pict" %>
      <span class='use-list-number'>2</span>
      <h3 class='use-list-text'>
        コーヒーの
        <span class='use-list-blue-text'>レビュー</span>
      </h3>
      <p class='use-list-description'>
        コーヒーの感想を投稿！
      </p>
    </li>
    <li class='list'>
      <%= image_tag "coffee-how-to3.jpg", class:"list-pict" %>
      <span class='use-list-number'>3</span>
      <h3 class='use-list-text'>
        コーヒー体験の
        <span class='use-list-blue-text'>共有</span>
      </h3>
      <p class='use-list-description'>
        皆の投稿を閲覧！
      </p>
    </li>
  </ul>
</div>
<%# CafeTimesの3つの活用法 %>

<%# レビューの一覧 %>
<% if @reviews.size != 0 %>
  <div class='review-contents'>
    <h2 class='title'>ユーザー投稿一覧</h2>
    <div class="review__wrapper">
      <%= render "shared/reviews" %>
    </div>
    <%= link_to "投稿をもっと見る" , reviews_path, class: "end" %>
  </div>
<% end %>
<%# //レビューの一覧 %>
