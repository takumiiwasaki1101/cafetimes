<%= render "shared/header"%>

<%= form_with model: @review , url: coffee_reviews_path ,class: 'registration-main', local: true do |f| %>

  <div class='form-wrap-show'>

    <%# 該当コーヒー情報の表示 %>
    <div class='form-header' style="background-image: url('<%= @coffee.country.image %>');">
      <h1 class='form-header-text-review'>
        <span class='first'>銘柄:<%= @coffee.name %></span>      
        <span class='second'>購入日:<%= @coffee.date_of_purchase %></span>      
        <span class='third'>購入店:<%= @coffee.shop %></span>      
      </h1>
    </div>
    <%# //該当コーヒー情報の表示 %>

    <%# エラーメッセージの表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# //エラーメッセージの表示 %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">飲んだ日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :date,
                      class:'sxlect-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 2000,
                      end_year: (Time.now.year),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">抽出器具</label>
        <span class="indispensable">任意</span>
      </div>
      <%= f.collection_select(:tool_id, Tool.all, :id, :name, {}, {class:"input-default", id:"item-category"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">レビュー</label>
      </div>
      <%= f.text_area :review, class:"input-long", id:"review", placeholder:"飲んだ感想を書いてみよう。" , rows:"7",maxlength:"1000" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "レビュー投稿" ,class:"register-red-btn" %>
    </div>
  </div>
<% end %>