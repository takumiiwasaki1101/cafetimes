<%= render "shared/header" %>

<% if @coffees.size == 0 %>
  <div class='form-header'>
    <h1 class='form-header-text'>
      まずは<%= link_to 'コーヒーの登録', new_coffee_path ,  class: "logout" %>を行いましょう！
    </h1>
  </div>
<% elsif @reviews.size == 0 %>
  <div class='form-header'>
    <h1 class='form-header-text'>
      まずは<%= link_to 'レビューの投稿', new_coffee_review_path(@coffee.id) , method: :get %>を行いましょう！
    </h1>
  </div>
<% else %>
  <% @reviews.each do |review| %>
    <div class='registration-main'>
      <div class='form-wrap-show'>
        <div class='form-header' style="background-image: url('<%= review.coffee.country.image %>');">
          <h1 class='form-header-text-review'>
            <span class='first'>銘柄:<%= review.coffee.name %></span>      
            <span class='second'>購入日:<%= review.coffee.date_of_purchase %></span>      
            <span class='third'>購入店:<%= review.coffee.shop %></span>      
          </h1>
        </div>
        <div class="form-group-coffees-show">
          <div class='form-text-wrap'>
            <label class="form-text">飲んだ日</label>
            <span class="indispensable"><%= review.date %></span>
          </div>
          <div class='form-text-wrap'>
            <label class="form-text">レビュー</label>
            <div class="input-long-coffees-show"><%= review.review %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>